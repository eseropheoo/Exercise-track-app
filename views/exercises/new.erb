<body id = "new">
	<form action="/" method="POST">
		<div>
			<label>Title</label>
		  <input type="text" name="title" placeholder="Name of the exercise">
		</div> <br>
		<div>
			<label>Image</label>
			<input type="text" name="image" placeholder="url">
		</div>
		<div>
			<label>username</label>
		  <input type="text" name="username" placeholder="Your username">
		</div> <br>
		
		<div>
		  <label>target muscles</label>
		  <textarea name="target_muscle" placeholder= "The muscle groups you're focusing on"></textarea>
		</div>


		<div>
			<label>description</label>
			<textarea name="body" placeholder="How to perfom the exercise" id = "description"></textarea>
		</div>

