			<label>Diet</label>
			<textarea name="diet" placeholder="meal plan"></textarea>

		</div>

		<div>
			<label>days_trained</label>
			<input type="number" name="days_trained">
		</div>

		<div> <br>
			<label>Reps</label>
		 	 <input type="text" name="reps" placeholder="No. of reps">
		</div>

